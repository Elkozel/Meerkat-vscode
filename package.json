{
	"name": "meerkat",
	"displayName": "Meerkat",
	"description": "Suricata/Snort VSCode extenssion",
	"author": "Tsvetomir Hristov",
	"publisher": "ELKozel",
	"repository": "https://github.com/Elkozel/Meerkat.git",
	"license": "MIT",
	"icon": "resources/icon.png",
	"version": "1.1.1",
	"categories": [
		"Snippets",
		"Formatters"
	],
	"keywords": [
		"lsp",
		"vscode extenssion",
		"language support"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage",
		"onCommand:meerkat.executeSuricata"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"title": "Meerkat",
			"properties": {
				"meerkat.ignoreSuricataErrors": {
					"type": "boolean",
					"default": false,
					"description": "Do not display error messages when suricata exits with an error code"
				},
				"meerkat.lsVersion": {
					"title": "Language Server Version",
					"type": "string",
					"enum": [
						"latest"
					],
					"default": "latest",
					"description": "Please pick the language server version you would like to use"
				}
			}
		},
		"commands": [
			{
				"title": "Say \"hello\" to Meerkat",
				"command": "meerkat.hello",
				"shortTitle": "Meerkat: Hello world!"
			},
			{
				"title": "Execute Suricata on a PCAP file",
				"command": "meerkat.pcaps.execute",
				"icon": "$(play)"
			},
			{
				"title": "Remove a PCAP file",
				"command": "meerkat.pcaps.remove",
				"icon": "$(remove)"
			},
			{
				"title": "Add a PCAP Directory",
				"command": "meerkat.pcaps.addFolder",
				"icon": "$(new-folder)"
			},
			{
				"title": "Add a PCAP file",
				"command": "meerkat.pcaps.addFile",
				"icon": "$(file-add)"
			},
			{
				"title": "Refresh PCAP Files",
				"command": "meerkat.pcaps.refresh",
				"icon": "$(refresh)"
			},
			{
				"title": "Open PCAP File in preview",
				"command": "meerkat.pcaps.previewPcap",
				"icon": "$(preview)"
			},
			{
				"title": "Refresh Suricata status",
				"command": "meerkat.status.refresh",
				"icon": "$(refresh)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "meerkat",
					"title": "Meerkat",
					"icon": "resources/meerkat.svg"
				}
			]
		},
		"views": {
			"meerkat": [
				{
					"id": "pcaps",
					"name": "PCAP Files"
				},
				{
					"id": "variables",
					"name": "Variables"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "pcaps",
				"contents": "You have not added any files:\n[Add a PCAP file](command:meerkat.pcaps.addFile)\n[Add a folder](command:meerkat.pcaps.addFolder)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "meerkat.pcaps.addFolder",
					"when": "view == pcaps",
					"group": "navigation@1"
				},
				{
					"command": "meerkat.pcaps.addFile",
					"when": "view == pcaps",
					"group": "navigation@2"
				},
				{
					"command": "meerkat.pcaps.refresh",
					"when": "view == pcaps",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "meerkat.pcaps.execute",
					"when": "view == pcaps && viewItem == pcapFile",
					"group": "inline"
				},
				{
					"command": "meerkat.pcaps.previewPcap",
					"when": "view == pcaps && viewItem == pcapFile",
					"group": "inline"
				},
				{
					"command": "meerkat.pcaps.remove",
					"when": "view == pcaps",
					"group": "inline"
				}
			],
			"explorer/context": [
				{
					"command": "meerkat.pcaps.execute",
					"group": "1_modification"
				},
				{
					"command": "meerkat.pcaps.addFile",
					"group": "1_modification"
				},
				{
					"command": "meerkat.pcaps.addFolder",
					"group": "1_modification"
				}
			]
		},
		"languages": [
			{
				"id": "suricata",
				"aliases": [
					"Suricata"
				],
				"extensions": [
					"rules"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "suricata",
				"path": "./snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^20.9.0",
		"typescript": "5.4.5"
	},
	"dependencies": {
		"axios": "^1.7.7",
		"node-downloader-helper": "^2.1.9",
		"path": "^0.12.7"
	}
}
